<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level %-20logger{20}: %msg %n</pattern>

        </encoder>
    </appender>

    <logger name="com.ecg.replyts" level="info"/>

    <logger name="com.ebay.ecg.sanitychecks" level="info"/>


    <root level="error">
        <appender-ref ref="STDOUT"/>
    </root>


</configuration>
