<hazelcast
        xsi:schemaLocation="http://www.hazelcast.com/schema/config http://www.hazelcast.com/schema/config/hazelcast-config-3.1.xsd"
        xmlns="http://www.hazelcast.com/schema/config"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <group>
        <name>replyts-mp-integration-test</name>
        <password>98sz70gyuihasp8acdfaa7</password>
    </group>

    <properties>
        <!-- Local development: no need to advertise MBean -->

        <property name="hazelcast.jmx">false</property>
        <property name="hazelcast.version.check.enabled">false</property>
    </properties>

    <!-- Local development: absolutely no need to join a cluster (this will just make the startup slower due to lookup timeouts) -->

    <network>
        <!-- This is necessary for Hazelcast to work in parallel unit tests -->

        <port auto-increment="true" port-count="100">5702</port>

        <join>
            <multicast enabled="false"/>
            <tcp-ip enabled="false"/>
            <aws enabled="false"/>
        </join>
    </network>
</hazelcast>
