<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="com.ebay.ecg.australia.replyts.eventlistener.event.MessageEventConfiguration"/>

    <bean id="eventCreator" class="com.ebay.ecg.australia.replyts.eventlistener.event.RTSRMQEventCreator" init-method="onSetup">
        <property name="eventHandlerClient" ref="rabbitMQProducerEventHandlerClient"/>
    </bean>
    <bean class="com.ebay.ecg.australia.replyts.eventlistener.event.MessageEventListener" init-method="onStartup">
        <property name="eventCreator" ref="eventCreator"/>
    </bean>
</beans>