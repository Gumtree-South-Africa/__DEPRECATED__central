<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="uniqueIdGenerator" class="com.ecg.de.mobile.replyts.uniqueid.UniqueIdGenerator">
        <constructor-arg><value>${replyts.uniqueid.pepper:wz1239yjdsfhqyOEedd}</value></constructor-arg>
    </bean>

    <bean class="com.ecg.de.mobile.replyts.uniqueid.MailUniqueIdPostProcessor">
        <constructor-arg ref="uniqueIdGenerator"></constructor-arg>
        <constructor-arg><value>${replyts.uniqueid.ignoredBuyerAddresses:}</value></constructor-arg>
        <constructor-arg><value>${replyts.uniqueid.order}</value></constructor-arg>
    </bean>

</beans>