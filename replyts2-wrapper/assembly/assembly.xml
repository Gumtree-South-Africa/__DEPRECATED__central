    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/appassembler</directory>
            <outputDirectory/>
        </fileSet>
        <fileSet>
            <directory>conf</directory>
