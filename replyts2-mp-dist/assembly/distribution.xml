<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>bin</id>

    <formats>
        <format>tar.gz</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>conf</directory>
            <outputDirectory>replyts/conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/appassembler/bin</directory>
            <outputDirectory>replyts/bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/appassembler/log</directory>
            <outputDirectory>replyts/log</outputDirectory>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>replyts/lib</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>
