<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean primary="true" id="coreBlockUserDataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close"
          p:driverClass="com.mysql.jdbc.Driver"
          p:jdbcUrl="${replyts2-belenblockeduserfilter-plugin.dataSource.url}"
          p:user="${replyts2-belenblockeduserfilter-plugin.username:belen}"
          p:password="${replyts2-belenblockeduserfilter-plugin.password:}"
          p:initialPoolSize="${replyts2-belenblockeduserfilter-plugin.dataSource.pool.c3p0.initialPoolSize:5}"
          p:minPoolSize="${replyts2-belenblockeduserfilter-plugin.dataSource.pool.c3p0.minPoolSize:3}"
          p:maxPoolSize="${replyts2-belenblockeduserfilter-plugin.dataSource.pool.c3p0.maxPoolSize:100}"
          p:acquireIncrement="${replyts2-belenblockeduserfilter-plugin.dataSource.pool.c3p0.acquireIncrement:5}"
          p:maxIdleTime="${replyts2-belenblockeduserfilter-plugin.dataSource.pool.c3p0.maxIdleTime:90}"
          p:maxConnectionAge="${replyts2-belenblockeduserfilter-plugin.dataSource.pool.c3p0.maxConnectionAge:900}"
          p:idleConnectionTestPeriod="${replyts2-belenblockeduserfilter-plugin.dataSource.pool.c3p0.idleConnectionTestPeriod:30}"
          p:dataSourceName="${replyts2-belenblockeduserfilter-plugin.dataSource.name:belen_user}"
          p:checkoutTimeout="${replyts2-belenblockeduserfilter-plugin.dataSource.pool.checkoutTimeout:2000}"
          p:connectionTesterClassName="com.mysql.jdbc.integration.c3p0.MysqlConnectionTester"
          p:numHelperThreads="${replyts2-belenblockeduserfilter-plugin.dataSource.pool.c3p0.numHelperThreads:10}"/>



    <bean id="replyts2-blockeduserfilter-plugin-datasource" class="com.ecg.de.kleinanzeigen.replyts.belen.blockeduser.BlockedUserFilterFactory">
        <constructor-arg index="0" ref="coreBlockUserDataSource"/>
    </bean>


</beans>