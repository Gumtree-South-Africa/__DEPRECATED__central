<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="com.ecg.de.mobile.replyts.badword.BadwordFilterFactory">
        <constructor-arg ref="csFilterService"/>
    </bean>

    <bean id="csFilterService" class="com.ecg.de.mobile.replyts.badword.CsFilterServiceClient">
        <constructor-arg value="${replyts.mobile.badword.csFilterServiceEndpoint}"/>
    </bean>

</beans>