<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="volumeEventRepository"
          class="nl.marktplaats.filter.volume.persistence.CassandraVolumeFilterEventRepository">
        <constructor-arg name="session" ref="cassandraSessionForCore"/>
        <constructor-arg name="readConsistency" ref="cassandraReadConsistency"/>
        <constructor-arg name="writeConsistency" ref="cassandraWriteConsistency"/>
    </bean>

    <bean class="nl.marktplaats.filter.volume.VolumeFilterFactory">
        <constructor-arg ref="volumeEventRepository"/>
    </bean>

</beans>