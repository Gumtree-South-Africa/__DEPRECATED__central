<included>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %-5level [%thread] %-35logger{35}: %msg %n</pattern>
        </encoder>
    </appender>

    <appender name="DIFF-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logDir}/diff.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
          <fileNamePattern>${logDir}/diff.%d{yyyy-MM-dd-HH}.log.zip</fileNamePattern>
          <maxHistory>50</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d %msg %n</pattern>
        </encoder>
    </appender>

    <appender name="NEW-DIFF-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logDir}/new-diff.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
          <fileNamePattern>${logDir}/new-diff.%d{yyyy-MM-dd}.log.zip</fileNamePattern>
          <maxHistory>10</maxHistory>
        </rollingPolicy>

        <encoder>
          <pattern>%d %msg %n</pattern>
        </encoder>
    </appender>

    <logger name="com.ecg.replyts" level="DEBUG" />
    <logger name="com.ecg.replyts2" level="DEBUG" />
    <logger name="com.ecg.messagecenter" level="DEBUG" />
    <logger name="com.ecg.messagebox" level="DEBUG" />
    <logger name="nl.marktplaats.filter" level="DEBUG" />
    <logger name="nl.marktplaats.postprocessor" level="DEBUG" />
    <logger name="com.ebay.ecg.sanitychecks" level="INFO" />

    <logger name="diffLogger" level="DEBUG" additivity="false">
          <appender-ref ref="DIFF-FILE"/>
    </logger>

     <logger name="newDiffLogger" level="DEBUG" additivity="false">
          <appender-ref ref="NEW-DIFF-FILE"/>
     </logger>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</included>
