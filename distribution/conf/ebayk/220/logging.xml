<!--
    This is a logback logging configuration file.
    It is automatically refreshed every 60s - therefore no need to restart RTS when modifying the settings here
-->
<!--

LOOKS LIKE A BROKEN CONFIG? It's not, this is just a fragment that will be included
from logback.xml.

-->
<included>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logDir}/replyts.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logDir}/replyts.log.%d.gz</fileNamePattern>
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %-35logger{35}: %msg %n</pattern>
            <outputPatternAsPresentationHeader>false</outputPatternAsPresentationHeader>
        </encoder>
    </appender>

    <property resource="release-info.properties"/>
    <property name="appName" value="replyts"/>

    <appender name="LOGSTASH" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logDir}/replyts-logstash.log</file>

        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <version/>
                <pattern>
                    <pattern>{
                        "level":"%level",
                        "logger_name":"%logger",
                        "thread":"%thread",
                        "message":"%message",
                        "application":"${appName}",
                        "source_host": "${HOSTNAME}",
                        "app_revision":"${release.info.revision}",
                        "build_timestamp":"${release.info.buildtime}"
                        }
                    </pattern>
                </pattern>
                <stackTrace class="com.ebay.belen.replyts.logging.BelenStackTraceJsonProvider"/>
                <mdc/>
            </providers>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logDir}/replyts-logstash.log.%d.gz</fileNamePattern>
            <maxHistory>60</maxHistory>
        </rollingPolicy>
    </appender>

    <logger name="com.ecg" level="INFO" />
    <logger name="com.ebay.ecg.sanitychecks" level="ERROR"/>
    <logger name="com.hazelcast.instance.Node" level="DEBUG" />

    <!-- hadoop logger -->
    <logger name="hadoop_daily_report_v2" level="info" additivity="false">
        <appender name="HADOOP_DAILY" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <encoder>
                <pattern>%msg%n</pattern>
                <outputPatternAsPresentationHeader>false</outputPatternAsPresentationHeader>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${logDir}/hadoop-REPLYTS_EVENTS_v2.%d{yyyy-MM-dd}</fileNamePattern>
                <maxHistory>3</maxHistory>
            </rollingPolicy>
        </appender>
    </logger>

    <logger name="hadoop_filter_performance" level="info" additivity="false">
        <appender name="HADOOP_FILTER_PERFORMANCE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <encoder>
                <pattern>%msg%n</pattern>
                <outputPatternAsPresentationHeader>false</outputPatternAsPresentationHeader>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${logDir}/hadoop-REPLYTS_FILTERPERFORMANCE.%d{yyyy-MM-dd}</fileNamePattern>
                <maxHistory>3</maxHistory>
            </rollingPolicy>
        </appender>
    </logger>


    <logger name="message-json-log" level="info" additivity="false">
        <appender name="HADOOP_DAILY" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <encoder>
                <pattern>%msg%n</pattern>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${logDir}/hadoop-MESSAGE_EVENTS_v3.%d{yyyy-MM-dd}</fileNamePattern>
                <maxHistory>3</maxHistory>
            </rollingPolicy>
        </appender>
    </logger>

    <logger name="migrations" level="INFO" additivity="false">
        <appender name="MIGRATIONS" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${logDir}/migrations.log.gz</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${logDir}/archived/migrations.log.%d</fileNamePattern>
                <maxHistory>30</maxHistory>
            </rollingPolicy>

            <encoder>
                <pattern>%d{HH:mm:ss} %-5level [%thread] : %msg %n</pattern>
                <outputPatternAsPresentationHeader>false</outputPatternAsPresentationHeader>
            </encoder>
        </appender>
    </logger>

    <root level="ERROR">
        <appender-ref ref="FILE" />
        <appender-ref ref="LOGSTASH" />
    </root>

</included>
