<included>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %-35logger{35}: %msg %n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logDir}/replyts.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logDir}/archived/replyts.log.%d</fileNamePattern>
            <maxHistory>5</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %-35logger{35}: %msg %n</pattern>
        </encoder>
    </appender>

    <appender name="LOGSTASH" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logDir}/logstash.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logDir}/archived/logstash.log.%d</fileNamePattern>
            <maxHistory>5</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
    </appender>

    <logger name="com.ecg.replyts" level="DEBUG" />
    <logger name="com.ecg.messagecenter.cronjobs" level="DEBUG" />
    <logger name="com.ecg.replyts.core.runtime.indexer" level="DEBUG" />
    <logger name="com.ebay.ecg.sanitychecks" level="INFO"/>

    <root level="ERROR">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
        <appender-ref ref="LOGSTASH" />
    </root>

    <logger name="message-json-log" level="INFO">
        <appender name="DWH_DAILY" class="com.ecg.au.gumtree.messagelogging.RTSDBAppender">
            <connectionSource class="ch.qos.logback.core.db.DriverManagerConnectionSource">
                <driverClass>com.mysql.jdbc.Driver</driverClass>
                <url>jdbc:mysql://10.41.138.69:3306/replyts</url>
                <user>box</user>
                <password>box</password>
            </connectionSource>
            <sqlDialect class="ch.qos.logback.core.db.dialect.MySQLDialect" />
        </appender>

        <root level="INFO">
            <appender-ref ref="DWH_DAILY"/>
        </root>
    </logger>
</included>
