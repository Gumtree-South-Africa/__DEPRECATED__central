{
  "job":{
    "ID":"comaas-deploy",
    "priority":50,
    "datacenters":[
      "ams1"
    ],
    "type":"service",
    "name":"comaas",
    "region":"comaas-qa",
    "TaskGroups":[
      {
        "Name":"comaas-node",
        "count":1,
        "Tasks":[
          {
            "Name":"comaas",
            "driver":"raw_exec",
            "Artifacts":[
              {
                "GetterSource":"http://buildmaster001/job/Mp_pipeline/ws/distribution/latest.tar.gz"
              }
            ],
            "config":{
              "command":"bin/comaas"
            },
            "Constraints":[
              {
                "LTarget":"${attr.hostname}",
                "RTarget":"core001",
                "Operand":"="
              }
            ],
            "LogConfig":{
              "MaxFileSizeMB":10,
              "MaxFiles":10
            },
            "resources":{
              "MemoryMB":1024,
              "DiskMB":2000,
              "CPU":200,
              "network":{
                "mbits":100
              }
            }
          }
        ]
      }
    ],
    "update":{
      "MaxParallel":1,
      "Stagger":30
    }
  }
}