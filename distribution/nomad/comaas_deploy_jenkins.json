{
  "job": {
    "ID":"comaas-$TENANT",
    "priority":50,
    "datacenters": [ "ams1"],
    "type": "system",
    "name": "comaas-$TENANT",
    "region": "comaas-qa",
    "TaskGroups": [
      {
        "Name":"comaas-node-$TENANT",
        "count":1,
        "Tasks": [
          {
            "Name":"comaas-$TENANT",
            "driver":"raw_exec",
            "Artifacts": [
              {
                "GetterSource":"http://buildmaster001/job/$PARENT_NAME/ws/distribution/latest.tar.gz"
              }
            ],
            "config": {
              "command":"bin/comaas"
            },
            "Constraints": [
              {
                "LTarget": "${attr.hostname}",
                "RTarget": "core*",
                "Operand": "distinct_hosts"
              }
            ],
            "LogConfig": {
              "MaxFileSizeMB":10,
              "MaxFiles":10
            },
            "resources": {
              "MemoryMB":1024,
              "DiskMB":2000,
              "CPU":200,
              "network": {
                "mbits":100
              }
            }
          }]
      }
    ],
    "Update": {
      "MaxParallel": 1,
      "Stagger": 30000000000
    }
  }
}