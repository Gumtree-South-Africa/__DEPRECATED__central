                </dependency>

                <dependency>
                    <groupId>ecg.comaas</groupId>
                    <artifactId>mde-filter-comaservice</artifactId>
                    <version>${project.version}</version>
                </dependency>

                <dependency>
                    <groupId>ecg.comaas</groupId>
                    <artifactId>mde-postprocessor-demandreporting</artifactId>
                    <version>${project.version}</version>
                </dependency>
                <dependency>
                    <groupId>ecg.comaas</groupId>
                    <artifactId>mde-postprocessor-sms</artifactId>
                    <version>${project.version}</version>
                </dependency>

