                            <artifactId>spring-beans</artifactId>
                        </exclusion>
                        <exclusion>
                            <groupId>org.springframework</groupId>
                            <artifactId>spring-core</artifactId>
                        </exclusion>
                    </exclusions>
                </dependency>
                <dependency>
                    <groupId>ecg.comaas</groupId>
                    <artifactId>ebayk-filter-belenblockedad</artifactId>
                    <version>${project.version}</version>
                    <!-- belenblockedadfilter has spring-beans in dependency provided. it's managed to compile from within this pom here.
                         for whatever reason, we do not want to provide spring-beans. -->
                    <exclusions>
