                </dependency>
                <dependency>
                    <groupId>ecg.comaas</groupId>
                    <artifactId>ebayk-filter-emailaddress</artifactId>
                    <version>${project.version}</version>
                </dependency>

                <dependency>
                    <groupId>ecg.comaas</groupId>
                    <artifactId>ebayk-messagecenter</artifactId>
                    <version>${project.version}</version>
                    <exclusions>
                        <exclusion>
                            <groupId>commons-logging</groupId>
