<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.ecg.messagebox.configuration"/>
    <context:component-scan base-package="com.ecg.messagebox.converters"/>
    <context:component-scan base-package="com.ecg.messagebox.diff"/>
    <context:component-scan base-package="com.ecg.messagebox.service"/>
    <context:component-scan base-package="com.ecg.messagebox.json"/>
    <context:component-scan base-package="com.ecg.messagebox.persistence.cassandra"/>
    <context:component-scan base-package="com.ecg.messagebox.cronjobs"/>

    <context:component-scan base-package="com.ecg.messagecenter.persistence.cassandra"/>
    <context:component-scan base-package="com.ecg.messagecenter.listeners"/>
    <context:component-scan base-package="com.ecg.messagecenter.webapi"/>
    <context:component-scan base-package="com.ecg.messagecenter.identifier"/>

    <bean id="userIdentifierServiceFactory" class="com.ecg.messagecenter.identifier.UserIdentifierServiceFactory"/>

    <bean id="userIdentifierService" factory-bean="userIdentifierServiceFactory"
          factory-method="createUserIdentifierService"/>
</beans>