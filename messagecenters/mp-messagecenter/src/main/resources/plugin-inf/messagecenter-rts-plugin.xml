<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="com.ecg.messagecenter.listeners.PostBoxUpdateListener"/>

    <!-- Old Cassandra PostBox Repository -->
    <bean class="com.ecg.messagecenter.persistence.cassandra.DefaultCassandraPostBoxRepository">
        <constructor-arg name="session" ref="cassandraSession"/>
        <constructor-arg name="readConsistency" ref="cassandraReadConsistency"/>
        <constructor-arg name="writeConsistency" ref="cassandraWriteConsistency"/>
    </bean>

    <!-- New Cassandra PostBox Repository -->
    <bean class="com.ecg.messagebox.persistence.cassandra.DefaultCassandraPostBoxRepository">
        <constructor-arg name="keyspace" value="${persistence.cassandra.keyspace}"/>
        <constructor-arg name="session" ref="cassandraSession"/>
        <constructor-arg name="readConsistency" ref="cassandraReadConsistency"/>
        <constructor-arg name="writeConsistency" ref="cassandraWriteConsistency"/>
        <constructor-arg name="messageTextPreviewMaxChars" value="${replyts.maxPreviewMessageCharacters:250}"/>
        <constructor-arg name="writeToNewDataModel" value="${messagebox.newDataModel.write.enabled:false}"/>
    </bean>

    <!-- Old Cassandra PostBox Repository -->
    <bean id="oldCassandraPostBoxService" class="com.ecg.messagecenter.persistence.cassandra.CassandraPostBoxService"/>

    <!-- New Cassandra PostBox Service -->
    <bean id="newCassandraPostBoxService" class="com.ecg.messagebox.service.CassandraPostBoxService"/>

    <bean id="postBoxDelegatorService" class="com.ecg.messagebox.service.PostBoxDelegatorService"/>

    <bean class="com.ecg.messagecenter.webapi.MessageCenterApiConfiguration"/>

    <bean id="userIdentifierServiceFactory" class="com.ecg.messagecenter.identifier.UserIdentifierServiceFactory"/>

    <bean id="userIdentifierService" factory-bean="userIdentifierServiceFactory"
          factory-method="createUserIdentifierService"/>

</beans>