<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %-5level %-20logger{20}: %msg %n</pattern>
        </encoder>
    </appender>

    <logger name="com.ecg.messagecenter" level="DEBUG"/>



    <root level="error">
        <appender-ref ref="STDOUT"/>
    </root>


</configuration>
